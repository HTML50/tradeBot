{
  "manifest_version": 2,
  "name": "bitWatcher",
  "description": "帮助你监控价格",
  "icons": {
    "16": "img/logo.png",
    "48": "img/logo.png",
    "128": "img/logo.png"
  },
  "version": "1.3",
  "permissions": [
    "storage", "tabs"
  ],
  "browser_action": {
    "default_icon": "img/logo.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "css": ["css/inject.css"],
    "js": ["js/content-script.js"],
    "matches": ["<all_urls>"],
    "all_frames": true
  }],
  "update_url": "https://raw.githubusercontent.com/HTML50/dict/master/update",
  "web_accessible_resources": ["404.html"]
}
